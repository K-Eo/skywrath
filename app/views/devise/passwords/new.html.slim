.ui.segment
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "ui form" }) do |f|

    .field class=field_error(resource, :email)
      = f.label :email
      = f.email_field :email, autofocus: true
      = field_error_message(resource, :email, :em)

    .field
      = f.submit t("devise.passwords.submit_new"), class: "ui fluid positive button"

  .auth-links
    = render "devise/shared/links"
